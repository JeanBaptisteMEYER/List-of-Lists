    app:startDestination="@+id/navigation_games">

    <fragment
        android:id="@+id/navigation_games"
        android:name="com.jbm.mistplaychallenge.ui.GamesFragment"
        android:label="@string/title_games"
        tools:layout="@layout/fragment_games" />

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.jbm.mistplaychallenge.ui.ChatFragment"
        android:label="@string/title_chat"
