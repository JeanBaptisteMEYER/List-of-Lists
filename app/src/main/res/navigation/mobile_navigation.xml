    <fragment
        android:id="@+id/navigation_shop"
        android:name="com.jbm.mistplaychallenge.ui.ShopFragment"
        android:label="@string/title_shop"
        tools:layout="@layout/fragment_shop" />

    <fragment
        android:id="@+id/navigation_bonus"
        android:name="com.jbm.mistplaychallenge.ui.BonusFragment"
